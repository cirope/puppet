<%= scope.function_template(["meteor/headers/_#{@osfamily.downcase}.sh.erb"]) %>

NAME=<%= @fqdn %>
SOURCE_DIR=<%= scope['vars::apps_root'] %>/<%= @fqdn %>
SOURCE_FILE=main.js
SOURCE_FILE_PATH=$SOURCE_DIR/$SOURCE_FILE
MONGO_BASE=mongodb://<%= scope['::mongo::user'] %>:<%= scope['::mongo::password'] %>@localhost:27017

PORT=8080
ROOT_URL=<%= @virtual ? 'http' : 'https' %>://<%= @fqdn %>
MONGO_URL=$MONGO_BASE/<%= scope['mongo::database'] %>
MONGO_OPLOG_URL=$MONGO_BASE/oplog
FOREVER_ROOT=/var/run/forever

user=<%= scope['user::deployer::username'] %>
pidfile=/var/run/$NAME.pid
lockfile=/var/lock/$NAME
logfile=/var/log/nodejs/$NAME-node.log

forever=`which forever`

if [ -z "$forever" ]; then
  echo "ERROR: can't find forever"
  exit 1
fi

variables="PORT=$PORT; ROOT_URL=$ROOT_URL; MONGO_URL=$MONGO_URL; MONGO_OPLOG_URL=$MONGO_OPLOG_URL"
start_options="-l $logfile -a --pidFile $pidfile --minUptime 5000 --spinSleepTime 2000"
start_cmd="$variables; $forever start $start_options $SOURCE_FILE_PATH > /dev/null 2>&1"
stop_cmd="$forever stop $SOURCE_FILE_PATH > /dev/null 2>&1"

export NODE_PATH=$NODE_PATH:/usr/lib/node_modules

start() {
  echo -n "Starting $NAME node instance: "

  mkdir -p /var/log/nodejs
  chown $user /var/log/nodejs

  mkdir -p $FOREVER_ROOT
  chown $user $FOREVER_ROOT

  touch $logfile
  chown $user $logfile

  touch $pidfile
  chown $user $pidfile

  su -c "$start_cmd" - $user

  RETVAL=$?

  [ $RETVAL -eq 0 ] && touch $lockfile

  echo
}

stop() {
  echo -n "Stopping $NAME node instance: "

  su -c "$stop_cmd" - $user

  RETVAL=$?

  [ $RETVAL -eq 0 ] && rm -f $lockfile

  echo
}

rh_status() {
  status -p $pidfile $NAME
}

rh_status_q() {
  rh_status >/dev/null 2>&1
}


case "$1" in
  start)
    rh_status_q && exit 0
    start
    ;;
  stop)
    rh_status_q || exit 0
    stop
    ;;
  restart)
    stop
    start
    ;;
  status)
    rh_status
    ;;
  *)
    echo "Usage:  {start|stop|restart|status}"
    exit 1
    ;;
esac

exit $RETVAL
